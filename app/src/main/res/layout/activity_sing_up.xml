<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SingUpActivity">


    <ImageView
        android:layout_width="438dp"
        android:layout_height="105dp"
        android:scaleType="fitStart"
        android:src="@drawable/banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/rubik_medium"
                android:text="Cadastro"
                android:textColor="@color/primary"
                android:textSize="36dp" />

            <ImageView
                android:id="@+id/progressBar"
                android:layout_width="316dp"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/progress_bar_1" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:text="Nome"
                android:textColor="@color/primary"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Nome"
                android:padding="20dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:text="Email"
                android:textColor="@color/primary"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="E-mail"
                android:padding="20dp" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:inputType="textEmailAddress"
                android:text="Senha"
                android:textColor="@color/primary"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="*********"
                android:inputType="textPassword"
                android:padding="20dp" />

            <TextView
                android:id="@+id/tvProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:text="imagem"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Escolha um arquivo"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProfileType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:text="Tipo de Perfil"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etProfileType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Moderado"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:text="Telefone"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="(11) 91234-5678"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:text="CEP"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Escolha seu CEP"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_light"
                android:text="Rua"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Rua"
                android:padding="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStreetNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/rubik_light"
                        android:text="Numero"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/etStreetNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_style"
                        android:hint="00"
                        android:inputType="number"
                        android:padding="20dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvComplement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/rubik_light"
                        android:text="Complemento"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/etComplement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_style"
                        android:hint="Complemento"
                        android:padding="20dp"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_style"
                    android:onClick="backStep"
                    android:text="Voltar"
                    android:textAlignment="center"
                    android:textColor="#FFFF"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_style"
                    android:onClick="nextStep"
                    android:text="Próximo"
                    android:textAlignment="center"
                    android:textColor="#FFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="208dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="Já tem uma conta?"
                        android:textAlignment="textEnd"
                        android:textColor="@color/primary"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="  Login"
                        android:textColor="@color/secondary"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>