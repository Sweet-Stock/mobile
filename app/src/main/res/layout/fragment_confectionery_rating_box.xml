<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"

    tools:context=".confectionery_rating.ConfectioneryRatingBox">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:clipToOutline="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/banner_profile"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/confectionery_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:textSize="45dp"
                    android:textColor="@color/text_banner"
                    android:text="Le doce"/>


                <ImageView
                    android:id="@+id/confectionaryPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_confectionery"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:clipToOutline="true">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_confectionery"></ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/confectionery_name2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Le Doce"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/primary_pink"
            android:textFontWeight="500"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/profileName"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avalie como foi o seu pedido"
            android:textFontWeight="400"
            android:textSize="20dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="20dp">
    <ImageView
        android:id="@+id/stars"
        android:layout_width="35.2dp"
        android:layout_height="33.71dp"
        android:layout_marginLeft="5dp"

        android:src="@drawable/star"
        />
    <ImageView
        android:id="@+id/stars2"
        android:layout_width="35.2dp"
        android:layout_height="33dp"
        android:layout_marginLeft="10dp"

        android:src="@drawable/star"
        />
    <ImageView
        android:id="@+id/stars3"
        android:layout_width="35.2dp"
        android:layout_height="33.71dp"
        android:layout_marginLeft="10dp"

        android:src="@drawable/star"
        />
    <ImageView
        android:id="@+id/stars4"
        android:layout_width="35.2dp"
        android:layout_height="33.71dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape"
        android:src="@drawable/star"
        />
    <ImageView
        android:id="@+id/stars5"
        android:layout_width="35.2dp"
        android:layout_height="33.71dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/star"
        />
</LinearLayout>

    </LinearLayout>
    <LinearLayout
android:layout_marginTop="10dp"
        android:layout_width="323dp"
        android:layout_height="168dp">
        <EditText
            android:id="@+id/etAvaliacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/et_style"
            android:hint="Descreva sua avaliação"

            android:padding="20dp" />
    </LinearLayout>
    <Button
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_style"
        android:onClick="goSucessRating"
        android:text="Avaliar"
        android:textAlignment="center"
        android:textColor="#FFFF" />

</LinearLayout>