<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">



    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/bolos" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/biscoitos" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/brigadeiro" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/brownie_cat" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_05"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/cupcake" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_06"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/doces_finos" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_07"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/donuts" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_08"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/mousse" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_09"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/pudim" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_10"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/sorvete" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_11"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/torta" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_12"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/trufa" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_13"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/zero_acucar" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_14"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/lactose" />


            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_home"
            android:text="@string/confeitarias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="textStart"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/ver_mais"
            android:textAlignment="textEnd"
            android:textColor="@color/primary"
            android:textSize="20sp" />


    </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/secondary"
        android:layout_gravity="end|bottom"
        android:src="@drawable/buy"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/confectioneryRecyclerContainer"
        tools:itemCount="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/card_confectionery"/>
</FrameLayout>




</LinearLayout>