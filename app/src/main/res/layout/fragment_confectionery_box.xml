<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
    tools:context=".page_controll.confectionery.Confectionery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:src="@drawable/profile_icon_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Alyce Lambo"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        />
                    <TextView
                        android:id="@+id/confectionaryRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/rubik_medium"
                        tools:text="4,5"
                        android:textColor="@color/primary_pink"/>
                    <ImageView
                        android:id="@+id/confectionaryPicture"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:src="@drawable/star"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/locationPicture"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:src="@drawable/flag_localizacao"
                        />
                    <TextView
                        android:id="@+id/locationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rua harry porter" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/commentRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:fontFamily="@font/rubik_medium"
                android:text="Ver detalhes"
                android:textColor="@color/primary_pink"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>